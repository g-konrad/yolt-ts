{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "./",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [],
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src", 
    "scripts", 
    "bench"
  ],
  "exclude": []
}
